<%= form_for(@movie, html: {class: 'form-horizontal'}) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %><br>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
  
  <div class="field form-group">
    <%= f.label :format, class: 'col-sm-2 control-label' %><br>
    <div class="col-sm-10">
      <%= f.select :format, ['VHS', 'DVD', 'Streaming'], class: 'form-control' %>
    </div>
  </div>
  
  <div class="field form-group">
    <%= f.label :length, "Length (minutes)", class: 'col-sm-2 control-label' %><br>
    <div class="col-sm-10">
      <%= f.number_field :length, class: 'form-control' %>
    </div>
  </div>
  
  <div class="field form-group">
    <%= f.label :release_year, class: 'col-sm-2 control-label' %><br>
    <div class="col-sm-10">
      <%= f.number_field :release_year, class: 'form-control' %>
    </div>
  </div>
  
  <div class="field form-group">
    <%= f.label :rating, class: 'col-sm-2 control-label' %><br>
    <div class="col-sm-10">
      1 <%= f.radio_button :rating, '1' %> <br/>
      2 <%= f.radio_button :rating, '2' %> <br/>
      3 <%= f.radio_button :rating, '3' %> <br/>
      4 <%= f.radio_button :rating, '4' %> <br/>
      5 <%= f.radio_button :rating, '5' %> <br/>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
