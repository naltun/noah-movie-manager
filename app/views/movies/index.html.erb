<p id="notice"><%= notice %></p>

<h1>Listing Movies</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr class="active info">
      <th>Title</th>
      <th>Format</th>
      <th>Length (minutes)</th>
      <th>Release year</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.format %></td>
        <td><%= movie.length %></td>
        <td><%= movie.release_year %></td>
        <td><%= movie.rating %></td>
        <td><%= link_to 'Show', movie, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_movie_path, class: 'btn btn-default' do %>
  <i class="glyphicon glyphicon-plus"></i>New Movie
<% end %>